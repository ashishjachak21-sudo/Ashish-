{
  "name": "ecommerce-marketplace",
  "version": "1.0.0",
  "description": "Full-featured e-commerce marketplace platform",
  "main": "server.js",
  "scripts": {
    "start": "node server/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "test": "jest --coverage",
    "seed": "node server/seeders/seed.js"
  },
  "keywords": [
    "ecommerce",
    "marketplace",
    "shopping",
    "online-store"
  ],
  "author": "Ashish",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "stripe": "^14.9.0",
    "nodemailer": "^6.9.7",
    "cloudinary": "^1.41.0",
    "compression": "^1.7.4",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0"
  }
}
